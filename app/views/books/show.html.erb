<div class="container px-0">
  <div class="row">

    <div class="col-md-3">
      <%= render 'users/user_newbook', user: @user , book: @book%>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table table-hover">
        <tbody>
          <tr>
            <td>
              <%= link_to user_path(@target_book.user.id), class: 'd-flex flex-column' do%>
                <%= image_tag @user.get_profile_image(100,100) %>
                <%= @target_book.user.name %>
              <% end %>
            </td>
            <td>
              <%= link_to book_path(@target_book.id) do %>
                <%= @target_book.title %>
              <% end %>
            </td>
            <td><%= @target_book.body %></td>
            <td>
              <%= link_to edit_book_path(@target_book.id), class: 'btn btn-success col' do %>
                Edit
              <% end %>
            </td>
            <td>
              <%= link_to edit_book_path(@target_book.id), class: 'btn btn-danger col' do %>
                Destroy
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>