<div class="container px-0">
  <div class="row">

    <div class="col-md-3">
      <%= render 'users/user_newbook', user: @user , book: @book%>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
      <table class="table">
        <thead>
          <tr>
            <th scope="col">image</th>
            <th scope="col">name</th>
            <th scope="col"></th>
          </tr>
        </thead>
        <% @users.each do |user| %>
          <tbody>
            <tr>
              <td>
                <%= image_tag user.get_profile_image(80,80) %>
              </td>
              <td>
                <%= user.name %>
              </td>
              <td>
                <%= link_to user_path(user.id) do%>
                  show
                <% end %>
              </td>
            </tr>
          </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>